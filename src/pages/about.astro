---
import Resume from "../components/Resume";
import CenteredLayout from "../layouts/CenteredLayout.astro";
---

<CenteredLayout title="About Me" description="About Me">
	<Resume client:load />

	<div
		class="rounded-lg border bg-card text-card-foreground p-6 font-mono my-4 text-sm"
	>
		<div class="flex items-center gap-2 mb-4">
			<span class="text-muted-foreground"><span class="font-bold text-blue-800">tux</span>@codeforces</span>
			<div class="h-[1px] flex-1 bg-border"></div>
		</div>

		<div class="grid gap-6">
			<!-- Stats Grid -->
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
				<div class="space-y-1">
					<p class="text-sm text-muted-foreground">Max Rating</p>
					<p class="text-2xl font-semibold">1606</p>
					<p class="text-sm text-primary">expert</p>
				</div>
				<div class="space-y-1">
					<p class="text-sm text-muted-foreground">
						Total Submissions
					</p>
					<p class="text-2xl font-semibold">2151</p>
				</div>
				<div class="space-y-1">
					<p class="text-sm text-muted-foreground">
						Accepted Solutions
					</p>
					<p class="text-2xl font-semibold">928</p>
					<p class="text-sm text-muted-foreground">(43.14%)</p>
				</div>
			</div>

			<!-- Timeline -->
			<div class="space-y-2">
				<p class="text-sm text-muted-foreground">Activity Timeline</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-2">
					<div class="text-sm">
						<span>2018-06-02</span> ~
						<span>2023-08-09</span>
					</div>
				</div>
			</div>

			<!-- Languages -->
			<div class="space-y-2">
				<p class="text-sm text-muted-foreground">Languages</p>
				<div class="space-y-1">
					<div class="flex justify-between text-sm">
						<span>C++</span>
						<span class="text-muted-foreground"
							>~1684 submissions</span
						>
					</div>
				</div>
			</div>

			<!-- Top Topics -->
			<div class="space-y-2">
				<p class="text-sm text-muted-foreground">Top Topics</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-2">
					{
						[
							{ name: "math", count: 376 },
							{ name: "implementation", count: 355 },
							{ name: "greedy", count: 330 },
							{ name: "brute force", count: 168 },
							{ name: "constructive algorithms", count: 140 },
							{ name: "sortings", count: 125 },
							{ name: "number theory", count: 105 },
							{ name: "dp", count: 96 },
							{ name: "strings", count: 89 },
							{ name: "data structures", count: 71 },
							// Add more topics as needed
						].map((topic) => (
							<div class="flex justify-between text-sm">
								<span>
									{topic.name} ({topic.count})
								</span>
							</div>
						))
					}
				</div>
			</div>
		</div>

		<div class="mt-5 rounded-lg">
			<p class="text-[9px] text-muted-foreground">
				generated by <a
					target="_blank"
					class="text-primary hover:underline"
					href="https://github.com/joynahid/cforces">cforces</a
				>
			</p>
		</div>
	</div>
</CenteredLayout>
